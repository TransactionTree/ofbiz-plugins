<?xml version="1.0" encoding="UTF-8"?>
<api description="Order Related API" displayName="Order API" name="OrderAPI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="rest-api.xsd">
  <resource description="" displayName="" enabled="true" name="Order Resource" path="/orders">
    <operation verb="post" description="Creates an order">
      <service name="createOrder"/>
    </operation>
    <operation verb="get" description="Retrieves all orders">
      <service name="getOrders"/>
    </operation>
    <operation verb="get" path="/{orderId}" description="Retrieves a specfici order">
      <service name="getOrderDetail"/>
    </operation>
    <operation verb="get" path="/{orderId}/shipments/{shipmentId}" description="Get Shipment Details.">
      <service name="getOrderShipment"/>
    </operation>
    <operation verb="get" path="/orders/{orderId}/shipments" description="Get All Shipments Details.">
      <service name="getOrderShipments"/>
    </operation>
  </resource>
